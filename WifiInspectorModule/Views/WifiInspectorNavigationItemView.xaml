<UserControl x:Class="WifiInspectorModule.Views.WifiInspectorNavigationItemView"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" 
     d:DesignHeight="300" d:DesignWidth="400">
    <RadioButton  x:Name="navigateRadioButton"  Style="{StaticResource MainViewRadioButtonStyle}" GroupName="MainNavigation" Click="navigateRadioButton_Click" MouseEnter="navigateRadioButton_MouseEnter" MouseLeave="navigateRadioButton_MouseLeave"  AutomationProperties.AutomationId="EmailRadioButton" >
         
        <StackPanel Height="50" Orientation="Horizontal" VerticalAlignment="Center">
            <Image x:Name="navigateImage" HorizontalAlignment="Left" VerticalAlignment="Center" Width="30" Source="../Images/in_active_radio.png" Margin="2,0,0,0" Height="30" Stretch="Fill"/>

            <StackPanel Orientation="Vertical"  Margin="10,0,0,0" VerticalAlignment="Center" >
                <TextBlock x:Name="NavigateTextBlock" TextWrapping="Wrap" Text="WiFi Inspector"       />
                <TextBlock x:Name="ShortTextBlock"   Margin="0,2,0,0" TextWrapping="Wrap" Text="Optimize your Wi-Fi connection"    Foreground="#ff777777"  FontSize="11"   FontFamily="Tahoma"/>
            </StackPanel>

        </StackPanel>

    </RadioButton>


</UserControl>
